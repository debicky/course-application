<div class="card mb-2">
  <div class="card-header">
    <span class="fa fa-user-edit"></span>
    <%= link_to comment.user, user_path(comment.user) %> |
     Commented <%= time_ago_in_words(comment.created_at) %> ago.
    <%= link_to "Delete comment", [@course, @lesson, comment], method: :delete, data: { confirm: "Are you sure?"}, class: "btn btn-danger" %>
  </div>
  <div class="card-body">
    <%= comment.content %>

  </div>
</div>