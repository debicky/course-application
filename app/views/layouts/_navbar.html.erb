<nav class="navbar navbar-expand-lg navbar-light bg-primary border-gradient">
<div class="container">
  <%= link_to root_path, class: "navbar-brand" do %>
    <div class="fab fa-contao"></div>
    CourseApp
  <% end %>  
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse pt-2" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <%= link_to courses_path, class: "nav-link" do %>
          <div class="fa fa-book"></div>
          Courses
        <% end %>
      </li>

      <% if current_user && current_user.has_role?(:teacher) %>
      <li class="nav-item">
        <%= link_to new_course_path, class: "nav-link" do %>
          <div class="fa fa-plus"></div>
          New Course
        <% end %>
      </li>
      <% end %>


      <% if current_user && current_user.has_role?(:admin) %>
      <li class="nav-item">
        <%= link_to enrollments_path, class: "nav-link" do %>
          <div class="fa fa-lock-open"></div>
          Enrollments
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to home_activity_path, class: "nav-link" do %>
          <div class="fa fa-bell"></div>
          Activity
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to users_path, class: "nav-link" do %>
          <div class="fa fa-user"></div>
          Users
        <% end %>
      </li>
      <% end %>


    </ul>  
    <ul class="navbar-nav ml-auto">
      <% if current_user %>
      <%= search_form_for @ransack_courses, as: :courses_search, url: courses_path, class: "form-inline" do |f| %>
        <div class="input-group">
          <%= f.search_field :title_or_short_description_cont, placeholder: "Search...", class: "form-control form-control-sm" %>   
          <div class="input-group-append">
          <button class="btn btn-dark btn-sm" type="submit">
              <span class="fa fa-search form-control-feedback"></span>
          </button>
          </div>
        </div>
      <% end %>
      <% end %>

      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <%= user_signed_in? ? "#{current_user.email.split("@")[0]}" : "Guest" %>
        </a>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <% if user_signed_in? %>
            <%= link_to "Edit profile", edit_user_registration_path, class: "dropdown-item" %>
            <div class="dropdown-divider"></div>
            <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          <% else %>
            <%= link_to "Sign up", new_user_registration_path, class: "dropdown-item" %>
            <div class="dropdown-divider"></div>
            <%= link_to "Login", new_user_session_path, class: "dropdown-item" %>
          <% end %>
        </div>
      </li>

    </ul>
  </div>
</div>
</nav>
