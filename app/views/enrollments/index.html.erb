<h3 class="text-center">Enrollments
  <div class="badge badge-primary"><%= @enrollments.count %></div>
</h3>

<div class="table-responsive">
  <table class = "table table-bordered table-sm table-striped">
    <thead>
      <tr>
        <th>Course</th>
        <th>User</th>
        <th>Rating</th>
        <th>Review</th>
        <th>Price</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @enrollments.each do |enrollment| %>
        <tr>
          <td><%= enrollment.course.title %></td>
          <td><%= enrollment.user.email %></td>
          <td><%= enrollment.rating %></td>
          <td><%= enrollment.review %></td>
          <td><%= number_to_currency(enrollment.price) %></td>
          <td><%= link_to 'Show', enrollment %></td>
          <td><%= link_to 'Edit', edit_enrollment_path(enrollment) %></td>
          <td><%= link_to 'Destroy', enrollment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'New Enrollment', new_enrollment_path %>
