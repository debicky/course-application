<%= simple_form_for(@course) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description, as: :rich_text_area %>

    <%= f.input :short_description %>
    <% if @course.logo.attached? %>
      <%= image_tag @course.logo, class: "img-thumbnail", style: "width: 200px" %>
    <% end %>
    <%= f.input :logo %>
    <%= f.input :level, collection: Course.levels, as: :radio_buttons %>
    <%= f.input :language, collection: Course.languages, as: :radio_buttons %>
    <%= f.input :price, collection: [9, 19, 49, 99, 149], as: :radio_buttons %>
    <%= f.input :published %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn" %>
  </div>
<% end %>


