<%= link_to "Courses", courses_path %> / <%= link_to @course.title %>

<div class="row">
  <div class="col-lg-6">
    <%= render @course %>
  </div>

  <div class="col-lg-6">
    <%= link_to "Add lesson", new_lesson_path(course_id: @course.id) %>
    <% @lessons.each do |lesson| %>
      <%= render 'lessons/lesson', lesson: lesson %>
    <% end %>
  </div>

</div>

