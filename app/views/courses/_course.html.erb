  <div class="card text-center mb-1  border border-dark">
    <div class="card-header  ">
    <div class="fa fa-graduation-cap"></div>
      <%= link_to course.title, course_path(course) %>
    </div>
    <div class="card-body ">
      <% if current_page?(courses_path) || current_page?(root_path)  %>
        <p class="card-text"><%= simple_format(course.short_description) %></p>
      <% else %>
        <p class="card-text"><%= course.description %></p>
      <% end %>
   
    </div>
    <div class="card-footer">
    <div class="fa fa-globe-africa"></div>
      <%= course.language %>
    <div class="fa fa-signal"></div>
      <%= course.level %>
      <%= number_to_currency(course.price) %>
    </div>
    <div class="card-footer ">
      <%= course.created_at.strftime('%d-%B-%Y') %> by 
      <%= course.user.username %>
      <div class="fa fa-chalkboard-teacher"></div>
    </div>
    <% if current_user %>
      <% if policy(course).admin_or_owner? %>
        <div class="card-footer ">
            <%= link_to 'Edit', edit_course_path(course), class: "btn btn-warning"  %> 
            <%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        </div> 
      <% end %>
    <% end %>
  </div>
